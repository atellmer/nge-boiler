{
  "name": "angular-electron-cherry-pie",
  "version": "0.0.1",
  "author": "AlexPlex",
  "licence": "UNLICENSED",
  "private": true,
  "directories": {
    "app": "./client/public",
    "output": "./electron-dist"
  },
  "build": {
    "appId": "com.example.electron-app"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm run build:dev",
    "server": "lite-server -c server.config.json",
    "build:dev": "set NODE_ENV=development&& npm run copy-files && webpack --config webpack.dev.config.js --watch",
    "build:prod": "set NODE_ENV=production&& npm run copy-files && webpack --config webpack.prod.config.js",
    "copy-files": "cp client/app/package.json client/public/",
    "electron": "electron client/public/",
    "electron:pack": "npm run build:prod && build --dir",
    "electron:dist": "npm run build:prod && build"
  },
  "dependencies": {
    "@angular/common": "^2.4.1",
    "@angular/compiler": "^2.4.1",
    "@angular/core": "^2.4.1",
    "@angular/forms": "^2.4.1",
    "@angular/http": "^2.4.1",
    "@angular/material": "^2.0.0-beta.1",
    "@angular/platform-browser": "^2.4.1",
    "@angular/platform-browser-dynamic": "^2.4.1",
    "@angular/router": "^3.4.1",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "rxjs": "^5.0.2",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/electron": "^1.4.30",
    "@types/hammerjs": "^2.0.33",
    "@types/node": "^6.0.53",
    "angular2-template-loader": "^0.6.0",
    "clean-webpack-plugin": "^0.1.14",
    "cli-color": "^1.1.0",
    "codelyzer": "^2.0.0-beta.4",
    "css-loader": "^0.26.1",
    "cssnano": "^3.9.1",
    "electron": "^1.4.10",
    "electron-builder": "^10.12.0",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "json-loader": "^0.5.4",
    "lite-server": "^2.2.2",
    "postcss": "^5.2.7",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-css-reset": "^1.0.2",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^5.1.2",
    "raw-loader": "^0.5.1",
    "stylelint": "^7.7.0",
    "stylelint-config-standard": "^15.0.1",
    "to-string-loader": "^1.1.5",
    "ts-loader": "^1.3.3",
    "tslint": "^4.2.0",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.1.4",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-target-electron-renderer": "^0.4.0"
  }
}
